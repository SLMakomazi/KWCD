{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "frontend/.next" }
    }
  ],
  "routes": [
    { "handle": "filesystem" },
    { "src": "/_next/static/(.*)", "dest": "/_next/static/$1" },
    { "src": "/static/(.*)", "dest": "/static/$1" },
    { "src": "/(.*)", "dest": "/frontend/$1" }
  ],
  "buildCommand": "cd frontend && npm run build",
  "outputDirectory": "frontend/.next"
}
